
@{
    ViewBag.Title = "Update";
    Layout = "~/Shared/_LayoutPage.cshtml";
}
@model SipsisDAL.Customer
<div class="row">
    <div class="col-12">
        <div class="card">
            <form class="form-horizontal" action="/Customer/Update" method="post">
                <div class="card-body">
                    <h4 class="card-title">Müşteri Güncelleme Ekranı</h4>
                    <input type="text" name="Id" value="@Model.Id" hidden/>
                    <div class="form-group row">
                        <div class="col-6">
                            <label for="fname" class="control-label col-form-label">Müşteri Adı</label>
                            <input type="text" name="CustomerName" class="form-control" id="CustomerName" placeholder="Lütfen Müşteri Adınızı Giriniz......" @Model.CustomerName required>
                        </div>
                        <div class="col-6">
                            <label for="fname" class="control-label col-form-label">Müşteri Telefonu</label>
                            <input type="text" name="CustomerPhone" class="form-control" id="CustomerPhone" placeholder="Lütfen Müşteri Telefonu Giriniz......" @Model.CustomerPhone required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label for="fname" class="control-label col-form-label">Pazaryeri Adı</label>
                            <select name="MarketId" id="MarketId" class="form-control">
                                @foreach (var item in ViewBag.market)
                                {
                                    if (item.Id == Model.MarketId)
                                    {
                                        <option selected value="@item.Id">@item.MarketName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.MarketName</option>
                                    }

                                }
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="fname" class="control-label col-form-label">Müşteri Adresi</label>
                            <textarea class="form-control" id="CustomerAddress" placeholder="Lütfen Müşteri Adresi Giriniz....." required>@Model.CustomerAddress</textarea>
                            @*<input type="text" name="MarketName" class="form-control" id="fname" placeholder="Lütfen Pazaryeri Adınızı Giriniz......" required>*@
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" id="saveData" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

