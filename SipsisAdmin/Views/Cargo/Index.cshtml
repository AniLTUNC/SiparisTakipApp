
@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/_LayoutPage.cshtml";
}
@model List<SipsisDAL.Cargo>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Müşteri Listesi</h5>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead class="text-center">
                            <tr>
                                <th>Kargo Logo</th>
                                <th>Kargo Adı</th>
                                <th>Ekleyen Kişi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                   <td>
                                        <img src="@item.CargoImageURL" height="70" width="70" alt="Alternate Text" />
                                   </td>
                                    <td>@item.CargoName</td>
                                    <td>@item.user.UserName</td>
                                    <td>
                                        <a href="/Cargo/Update/@item.Id" class="btn-warning text-light"><i class="fa fa-edit"></i>Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

