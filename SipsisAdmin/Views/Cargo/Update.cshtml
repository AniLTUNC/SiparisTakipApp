
@{
    ViewBag.Title = "Kargo Güncelleme Ekranı";
    Layout = "~/Shared/_LayoutPage.cshtml";
}
@model SipsisDAL.Cargo
<div class="col-md-10">
    <div class="card">
        <form class="form-horizontal" action="/Cargo/Insert" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <h4 class="card-title">Kargo Güncelleme Ekranı</h4>
                <input type="text" name="Id" value="@Model.Id" hidden />
                <div class="row">
                    <div class="col-6 pull-left">
                        <div class="form-group row">
                            <label for="fname" class="control-label col-form-label">Pazaryeri Adı</label>
                            <div class="col-10">
                                <input type="text" name="CargoName" class="form-control" id="fname" placeholder="Lütfen Kargo Adınızı Giriniz......" value="@Model.CargoName" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <lable class="control-label"> Kargo Logo Seçiniz:</lable>
                                <label for="imageUpload" class="btn btn-warning"><i class="fa fa-camera"></i> Logo Seçiniz</label>
                                <input type="file" name="resim" id="imageUpload" accept=".jpg,.png,jpeg" style="display:none" hidden onchange="loadfile(event)" />
                            </div>
                        </div>
                    </div>
                    <div class="col-6 pull-right"></div>
                    <img id="gorsel" src="@Model.CargoImageURL" height="150" width="150" />
                </div>
            </div>
            <div class="border-top">
                <div class="card-body">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section JS{
    <script>
        var loadfile = function (event) {
            var gorsel = document.getElementById('gorsel');
            gorsel.src = URL.createObjectURL(event.target.files[0])
        }
    </script>
}

